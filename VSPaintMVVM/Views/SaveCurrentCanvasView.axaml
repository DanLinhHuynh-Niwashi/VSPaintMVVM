<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="300" d:DesignHeight="150" CanResize="False"
        x:Class="VSPaintMVVM.Views.SaveCurrentCanvasView"
        Title="NewCanvasDialog">
	<Panel>
		<Grid>
			<Grid.RowDefinitions>
				<RowDefinition Height="Auto"></RowDefinition>
				<RowDefinition Height="Auto"></RowDefinition>
			</Grid.RowDefinitions>

			<TextBlock Text="Save Current Canvas Option" Grid.Row="0" Foreground="White" Background="#301934" Padding="5"/>
			<TextBlock Text="Do you want to save the current canvas?" Grid.Row="1" Padding="15" HorizontalAlignment="Left" VerticalAlignment="Center"/>
		</Grid>

		<Grid>
			<Button Content="Yes"
					VerticalAlignment="Bottom" HorizontalContentAlignment="Center"
					HorizontalAlignment="Left"
					Margin="20" Width="70"/>
			<Button Content="No"
					VerticalAlignment="Bottom" HorizontalContentAlignment="Center"
					HorizontalAlignment="Right"
					Margin="20"  Width="70"/>
		</Grid>
	</Panel>
</Window>
