<UserControl
             xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:VSPaintMVVM.Views"
             xmlns:app="clr-namespace:VSPaintMVVM"
			 xmlns:paz="using:Avalonia.Controls.PanAndZoom"
			 
			 xmlns:vm="using:VSPaintMVVM.ViewModels"
			 x:CompileBindings="True"
             Focusable="True"
             mc:Ignorable="d"
             x:Class="VSPaintMVVM.Views.ArtContainerView">


		<ScrollViewer HorizontalScrollBarVisibility="Visible" 
					  VerticalScrollBarVisibility="Visible"
					  VerticalAlignment="Center"
					  HorizontalAlignment="Center"
					  Offset="500 500">
			<paz:ZoomBorder Name="ZoomBorder" Stretch="None" ZoomSpeed="1.2"
                            Background="Gray" ClipToBounds="True" Focusable="True"
                            VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
			<Panel Name="canvasContainer" MinWidth="2000" MinHeight="2000">
				<local:SkiaCanvas Width="400" Height="400" RenderOptions.BitmapInterpolationMode="LowQuality">
					<local:SkiaCanvas.RenderTransform>
						<ScaleTransform ScaleX="1" ScaleY="1"></ScaleTransform>
					</local:SkiaCanvas.RenderTransform>
				</local:SkiaCanvas>
			</Panel>
			</paz:ZoomBorder>
		</ScrollViewer>


</UserControl>